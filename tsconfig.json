{
  "compilerOptions": {
      "module": "commonjs",
      "outDir": "./dist",
      "target": "es2020",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": true,
      "moduleResolution": "node"
  },
  "include": [
      "app/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}